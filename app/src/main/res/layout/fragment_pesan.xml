<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PesanFragment"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/AppBar">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            app:titleCentered="true"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/topAppBar"
            app:title="Konfirmasi Pesanan"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvKeranjang"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/AppBar"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ringkasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ringkasan Pembayaran"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/ringkasan"
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pembayaran"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ringkasan"
            android:id="@+id/tv_totalHargaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_pesan"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="PESAN" />

</LinearLayout>